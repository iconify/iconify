{
	"compilerOptions": {
		"target": "ES2019",
		"module": "CommonJS",
		"allowJs": true,
		"declaration": true,
		"declarationMap": false,
		"sourceMap": false,
		"composite": true,
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"importsNotUsedAsValues": "error",
		"noEmit": true
	},
	"include": ["./tests/**/*", "./src/**/*"],
	"files": ["./.eslintrc.js"]
}
